{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}
<h1>show one post</h1>

<h1>{{post.title}} le {{post.createdAt | date}}</h1>
<h2>{{post.subTitle}}</h2>
<p>{{post.content}}</p>
<h4>{{post.category.name}}</h4>
<a href="/category/{{post.category.name}}"><button type="button" class="btn btn-warning">retour</button></a>

<div class="row">
    {% for photo in post.photos %}
    <img src="{{photo.url}}" alt="">
{% endfor %}

</div>


{% for com in post.comments %}
<h2>{{com.author}}</h2>
<h3>commentaire du {{com.createdAd | date}}</h3>
<p>{{com.comment}}</p>

    
{% endfor %}
    

{% endblock %}
