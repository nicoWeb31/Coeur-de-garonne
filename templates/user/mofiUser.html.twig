{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block monTitle %}Profile Utilisateur : {{user.name}}{% endblock %}
{% block body %}

<img src="{{asset('images/imagesUsers/' ~ user.photo)}}" class="_profileImg mx-auto d-block m-4" alt="" >
{{form_start(form)}}
{{form_row(form.photo)}}
<div class="row">
    
    
    
    <div class="col-6  p-5">
        
        {{form_row(form.name)}}
        {{form_row(form.prenom)}}
        {{form_row(form.phone)}}
        
    </div>
    <div class="col-6 p-5">
        
        {{form_row(form.adresse)}}
        {{form_row(form.ville)}}
        {{form_row(form.codePostal)}}

        
        {{form_end(form)}}
    </div>
</div>

<a href="{{path('user_gestion')}}" class="btn btn-info w-25 mx-auto d-block p-2 m-5" >valider</a>




{% endblock %}