{% extends 'base.html.twig' %}

{% block title %}Nous rejoindre |
	{{parent()}}
{% endblock %}
{% block monTitle %}Rejoindre VTT en coeur de garonne
{% endblock %}

{% block body %}

	{{form_start(form)}}
	<div class="container">


		<h2 class="text-center m-4 text-warning">Inscription site :</h2>
		<div class="row border-bottom border-light m-5">
			<div class="col-12 col-md-6 col-xl-6">
				{{form_row(form.name,{
            "attr":{
                "placeholder":"entrer votre Nom"
            },
            "label":"Nom :"
        })}}
				{{form_row(form.prenom,{
            "attr":{
                "placeholder":"entrer votre Prénom"
            },
            "label":"Prénom :"
        })}}

				{{form_row(form.adresse,{
            "attr":{
                "placeholder":"entrer votre adresse"
            },
            "label":" Adresse:"
        })}}

				{{form_row(form.codePostal,{
            "attr":{
                "placeholder":"entrer votre code postal"
            },
            "label":"Code postal :"
        })}}

				{{form_row(form.ville,{
            "attr":{
                "placeholder":"entrer votre ville"
            },
            "label":"Ville :"
        })}}

				{{form_row(form.phone,{
            "attr":{
                "placeholder":"entrer votre numéro de télephone",
                "type":"number"
            },
            "label":"Numéro de telephone :"
        })}}

				{{form_row(form.imageFile,{
            "attr":{
                "placeholder":"Photo profil jpg"
            },
            "label":"Image :"
        })}}
				<div>
					<small>format photo de profil : 'jpeg'</small>
				</div>
			</div>

			<div class="col-12 col-md-6 col-xl-6">
				{{form_row(form.username,{
            "attr":{
                "placeholder":"entrer votre pseudo"
            },
            "label":"Pseudo :"
        })}}

				{{form_row(form.mail,{
            "attr":{
                "placeholder":"entrer votre adresse mail"
            },
            "label":"Mail :"
        })}}


				{{form_row(form.password,{
            "attr":{
                "placeholder":"entrer votre mot de passe"
            },
            "label":"Mot de passe :"
        })}}

				{{form_row(form.verifPassword,{
            "attr":{
                "placeholder":"Confirmer votre mot de passe"
            },
            "label":"Confirmer votre mot de passe :"
        })}}

				{{form_row(form.catergoryUsers,{
            "attr":{
                "placeholder":"Categories"
            },
            "label":"Categories :"
        })}}

				{# <input type="hidden" id="recaptchaRes" name="_recaptchaRes"> #}

				<input type="submit" class="btn btn-success" value="envoyer">
			</div>
		</div>
		<hr>
		<div class='border-bottom border-light m-5'>
			<h2 class='text-center text-warning p-4'>Adhesion à l'association :</h2>
			<a href="https://www.payassociation.fr/vttencoeurdegaronne/cotisations" class="mx-auto" target="_blank">

				<h3 class=" btn-lg btn btn-info mx-auto btn-lg d-block mx-auto m-4 _btnAdhesion">
					<svg width="2em" height="2em" viewbox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
					</svg>
					<svg width="2em" height="2em" viewbox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
					</svg>
					Adhesion ici</h3>
			</a>

		</div>

	</div>
	{{form_end(form)}}


{% endblock %}
