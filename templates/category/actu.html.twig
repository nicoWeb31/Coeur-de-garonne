{% extends 'base.html.twig' %}

{% block title %}Acrtalités{% endblock %}
{% block monTitle %}Actualités{% endblock %}

{% block body %}
    {% for actu in  cat %}
        <h1>{{actu.name}}</h1>
            {% for post in actu.posts %}
                <h1>{{post.id}}</h1>
                <h2>{{post.title}}</h2>
                <p>{{post.content}}</p>
                <a href="{{path('post',{'id':post.id})}}" class="btn btn-info">Voir plus</a>

            {% endfor %}
    {% endfor %}


{% endblock %}